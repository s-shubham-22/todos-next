{
  "extends": "next/core-web-vitals",
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-multi-spaces": [
      "error"
    ],
    "no-mixed-spaces-and-tabs": [
      "error"
    ]
  }
}